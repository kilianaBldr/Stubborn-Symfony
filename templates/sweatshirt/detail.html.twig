{% extends 'base.html.twig' %}

{% block title %}Détails du Sweatshirt{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>{{ sweatshirt.name }}</h1>

    <div class="row">
        <div class="col-md-6">
            <img src="{{ asset('uploads/' ~ sweatshirt.image) }}" class="img-fluid" alt="{{ sweatshirt.name }}">
        </div>
        <div class="col-md-6">
            <h3>Prix : {{ sweatshirt.price }} €</h3>
            <p>Stock disponible : {{ sweatshirt.stock }}</p>

            <form method="post" action="{{ path('app_card', { id: sweatshirt.id }) }}">
                <div class="mb-3">
                    <label for="size" class="form-label">Taille</label>
                    <select id="size" name="size" class="form-select" required>
                        <option value="XS">XS</option>
                        <option value="S">S</option>
                        <option value="M">M</option>
                        <option value="L">L</option>
                        <option value="XL">XL</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-success">Ajouter au panier</button>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('app_sweatshirt') }}" class="btn btn-secondary">Retour aux Sweatshirts</a>
    </div>
</div>
{% endblock %}