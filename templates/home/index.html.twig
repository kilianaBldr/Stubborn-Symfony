{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="jumbotron text-center">
        <h1 class="display-4">Bienvenue chez Stubborn</h1>
        <hr class="my-4">
    </div>

    <h2 class="text-center my-5">Sweatshirts en vedette</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for sweatshirt in featuredSweatshirts %}
            <div class="col">
                <div class="card h-100">
                    <img src="{{ asset('uploads/' ~ sweatshirt.image) }}" class="card-img-top" alt="{{ sweatshirt.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ sweatshirt.name }}</h5>
                        <p class="card-text">Prix : {{ sweatshirt.price }} â‚¬</p>

                        {% if app.user %}
                            <a href="{{ path('app_sweatshirtDetail', { id: sweatshirt.id }) }}" class="btn btn-primary">Voir</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}